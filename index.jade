extends main
include mixins

block vars
  - var hasToolbar = false
block content
  div
     +defaultList()
     .container.screen-container(ng-app='allcount',ng-controller="PosController")
       .left-animation-screen(lc-list="'AllFiledsView'", paging="{}",  edit-mode='false')
       .row
         .col-md-8
           .items-bar.row.btn-toolbar(lc-list="'AllFiledsView'", paging="{}",  edit-mode='false')
             .col-lg-4.col-md-6.col-xs-12(ng-repeat="item in items")
               button.btn.btn-lg.btn-block.btn-default(ng-click="addItem(item)")
                   div(ng-repeat="fd in fieldDescriptions", lc-field="fd",ng-model="item[fd.field]", is-editor="false")

    div(lc-grid="'AllFiledsView'", edit-mode="false" )
          
block js
  +entityJs()
